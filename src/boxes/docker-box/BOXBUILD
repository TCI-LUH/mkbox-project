extend "$BOXES_BASE/linux-box/BOXBUILD"

inc_root_size 250M
name="docker-box"

apks+=(
    openssh
    docker
    ca-certificates
    openssl
)

function root()
{
    cp -r "$SRC/root/"* "$DEST"

    enable_service "docker" "default"
    enable_service "sshd" "default"
    enable_service "update-ca-certificates" "default"
}